<div class="chat-header">
  <div class="left-header">
    <div class="now-chat-room">
      ナウチャットルーム名
    </div>
  </div>
  <div class="right-header">
    <div class="chat-end-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <% 10.times do |massage| %>
    <div class="massage-content">
      <div class="massage-upper">
        <div class="massage-name">Takemoto</div>
        <div class="massage-timestamp">date</div>
      </div>
      <div class="massage-lower">
        <div class="massage-text">hello</div>
      </div>
    </div>
  <% end %>
</div>

<%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>